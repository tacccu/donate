<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollViewRegistro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            tools:context="ui.registro.RegistroActivity">


            <TextView
                android:id="@+id/tituloRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:text="@string/registrarse"
                android:textSize="40sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/emailViewRegist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:text="@string/promt_email"
                android:textColor="#AB47BC"
                android:textSize="@dimen/texto_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tituloRegistro" />

            <EditText
                android:id="@+id/intrEmailRegist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intrTextRegistHeight"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint="@string/intr_email"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/texto_pequeño"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailViewRegist" />

            <TextView
                android:id="@+id/userViewRegist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:text="@string/prompt_user"
                android:textColor="@color/morado_oscuro"
                android:textSize="@dimen/texto_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/intrEmailRegist" />

            <EditText
                android:id="@+id/editTextUser"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intrTextRegistHeight"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="text"
                android:hint="@string/intr_user"
                android:textColorHint="@color/black"
                android:textSize="@dimen/texto_pequeño"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userViewRegist" />


            <TextView
                android:id="@+id/telefViewRegist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:text="@string/promt_movil"
                android:textColor="@color/morado_oscuro"
                android:textSize="@dimen/texto_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextUser" />

            <EditText
                android:id="@+id/editTextTelef"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intrTextRegistHeight"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint="@string/intr_telef"
                android:inputType="phone"
                android:textSize="@dimen/texto_pequeño"
                android:textColorHint="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefViewRegist" />

            <TextView
                android:id="@+id/contraViewRegist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:text="@string/prompt_password"
                android:textColor="@color/morado_oscuro"
                android:textSize="@dimen/texto_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTelef" />

            <EditText
                android:id="@+id/editTextContra"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intrTextRegistHeight"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:hint="@string/intr_contraseña"
                android:inputType="textPassword"
                android:textSize="@dimen/texto_pequeño"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contraViewRegist" />

            <TextView
                android:id="@+id/contraAgainViewRegist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:text="@string/prompt_password_again"
                android:textColor="@color/morado_oscuro"
                android:textColorHint="@color/black"
                android:textSize="@dimen/texto_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextContra" />

            <EditText
                android:id="@+id/editTextContraAgain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="@string/intr_password_again"
                android:minHeight="48dp"
                android:textSize="@dimen/texto_pequeño"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contraAgainViewRegist" />

            <TextView
                android:id="@+id/TipoCuentaViewRegist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:ems="10"
                android:text="@string/selec_cuenta"
                android:textColor="@color/morado_oscuro"
                android:textSize="@dimen/texto_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextContraAgain" />

            <!--TODO estilizar bonito el spinner y arreglar los colores de los edittext-->
            <Spinner
                android:id="@+id/spinnerSelecCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:minHeight="48dp"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:text="@string/selec_cuenta"
                android:textColor="@color/morado_oscuro"
                android:textSize="@dimen/texto_general"
                android:contentDescription="@string/contentDescrip"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TipoCuentaViewRegist" />

            <Button
                android:id="@+id/botonRegistro"
                android:backgroundTint="@color/morado_oscuro"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="45dp"
                android:text="@string/registrarse"
                android:theme="@style/Theme.DonAte"
                android:textColor="@color/morado_claro"
                android:textSize="@dimen/texto_general"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerSelecCuenta"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>